<!-- admin_remarks.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('_layouts/head') %>
    <title>Add Admin Remarks | <%= title %></title>
</head>

<body>

    <%- include('_layouts/sidenavbar') %>

    <div id="main">
        <div class="container">
            <div class="section">
                <div class="row">
                    <div class="col s12">
                        <%- messages('messages', locals) %>
                    </div>
                </div>
                <form method="POST" action="/ticket/add-admin-remarks/<%= ticket.id %>" id="form">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <h5><%= ticket.title %></h5>
                                        <p><%= ticket.description %></p>
                                        <% if (ticket.image && ticket.image.length > 0) { %>
                                        <% for (let i = 0; i < ticket.image.length; i++) { %>
                                        <img src="<%= ticket.image[i] %>" alt="IMG" height="80">
                                        <% } %>
                                        <% } else { %>
                                        <p>No images available</p>
                                        <% } %>
                                        <p><strong>Employee Remarks:</strong> <%= ticket.employeeRemarks || 'No remarks added by employee' %></p>
                                        <p><strong>Manager Remarks:</strong> <%= ticket.managerRemarks || 'No remarks added by manager' %></p>
                                        <p><strong>Admin Remarks:</strong> <%= ticket.adminRemarks || 'No remarks added by admin' %></p>
                                    </div>
                                    <div class="input-field col s12">
                                        <textarea id="adminRemarks" name="adminRemarks" class="materialize-textarea"></textarea>
                                        <label for="adminRemarks">Add Admin Remarks</label>
                                    </div>
                                    <div class="col s12">
                                        <button type="submit" class="btn purple" id="submitBtn">Submit Remarks</button>
                                        <a href="/ticket" class="btn btn-danger ml-1">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('_layouts/commonJs') %>
</body>

</html>