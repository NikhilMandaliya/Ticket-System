<!-- BEGIN: Header-->
<header class="page-topbar" id="header">
    <div class="navbar navbar-fixed">
        <nav class="navbar-main navbar-color nav-collapsible sideNav-lock navbar-light">
            <div class="nav-wrapper">
                <ul class="navbar-list right">
                    <li>
                        <a class="waves-effect waves-block waves-light profile-button" href="javascript:void(0);" data-target="profile-dropdown">
                            <span class="avatar-status">
                                <img src="/uploads/default_user.jpg" alt="avatar">
                            </span>
                        </a>
                    </li>
                </ul>
                <ul class="dropdown-content" id="profile-dropdown">
                    <li>
                        <a class="grey-text text-darken-1" href="/logout" onclick="return confirm('Are you sure?');"><i class="material-icons">keyboard_tab</i>Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>
<!-- END: Header-->
<!-- BEGIN: SideNav-->
<aside class="sidenav-main nav-expanded nav-lock nav-collapsible sidenav-dark sidenav-active-rounded">
    <div class="brand-sidebar">
        <h1 class="logo-wrapper">
            <a class="brand-logo darken-1" href="/">
                <img class="hide-on-med-and-down " src="/app-assets/images/logo/materialize-logo.png" alt="materialize logo">
                <img class="show-on-medium-and-down hide-on-med-and-up" src="/app-assets/images/logo/materialize-logo-color.png" alt="materialize logo">
                <span class="logo-text hide-on-med-and-down">Ticket System</span>
            </a>
        </h1>
    </div>
    <ul class="sidenav sidenav-collapsible leftside-navigation collapsible sidenav-fixed menu-shadow" id="slide-out" data-menu="menu-navigation" data-collapsible="accordion">
        <li class="bold <%= url == '/' ? 'active' : '' %>">
            <a class="waves-effect waves-cyan <%= url == '/' ? 'active' : '' %>" href="/">
                <i class="material-icons">desktop_windows</i>
                <span class="menu-title">Dashboard</span>
            </a>
        </li>
        <li class="navigation-header">
            <a class="navigation-header-text">manage tickets</a>
            <i class="navigation-header-icon material-icons">more_horiz</i>
        </li>
        <li class="bold <%= url.startsWith('/ticket') ? 'active' : '' %>">
            <a class="waves-effect waves-cyan <%= url.startsWith('/ticket') ? 'active' : '' %>" href="/ticket">
                <i class="material-icons">view_week</i>
                <span class="menu-title">Tickets</span>
            </a>
        </li>
        <% if (role && role === 'admin') { %>
        <li class="navigation-header">
            <a class="navigation-header-text">Users</a>
            <i class="navigation-header-icon material-icons">more_horiz</i>
        </li>
        <li class="bold <%= url.startsWith('/user') ? 'active' : '' %>">
            <a class="waves-effect waves-cyan <%= url.startsWith('/user') ? 'active' : '' %>" href="/user">
                <i class="material-icons">person</i>
                <span class="menu-title">User Management</span>
            </a>
        </li>
        <% } %>
    </ul>
    <div class="navigation-background"></div><a class="sidenav-trigger btn-sidenav-toggle btn-floating btn-medium waves-effect waves-light hide-on-large-only" href="#" data-target="slide-out"><i class="material-icons">menu</i></a>
</aside>